<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "testAddCourse" class = "org.example.events_handling.TestAddCourse">
        <property name = "course" value = "Java Full Stack"/>
    </bean>

    <bean id = "contextStartEventHandler" class = "org.example.events_handling.ContextStartEventHandler"/>
    <bean id = "contextStopEventHandler" class = "org.example.events_handling.ContextStopEventHandler"/>
    <bean id = "contextClosedEventHandler" class = "org.example.events_handling.ContextClosedEventHandler"/>
    <bean id = "contextRefreshedEventHandler" class = "org.example.events_handling.ContextRefreshedEventHandler"/>

</beans>